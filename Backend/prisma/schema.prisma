generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int      @id @default(autoincrement())
  name               String
  loginId            String   @unique
  password           String   
  faceRecognitionCode String
  aadhaarNo         String   @unique
  panNo             String   @unique
  phoneNo           String   @unique
  voterId String
  AdhaarId String
  Driver_licence String
  Income_tax_returns String
  Degree_certificate String
  Caste_certificate String
  Health_insurance String
  Salary_Slip String
  Medical_certificate String
}

model Admin{
  adminId String @unique
  password String
}
model State {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  tamilNadu TamilNadu?
  telangana Telangana?
  kerala Kerala?
  karnataka Karnataka?
}

model TamilNadu {
  id                          Int                       @id @default(autoincrement())
  name                        String                    @unique
  ammaUnavagamApplications    AmmaUnavagamApplication[]
  naanMudhalvanApplications   NaanMudhalvanApplication[]
  breakfastSchemeApplications BreakfastSchemeApplication[]
  mgnregaApplications         MGNREGAApplication[]

  state                       State?                    @relation(fields: [stateId], references: [id])
  stateId                     Int?      @unique                // Foreign key back to State
}


model AmmaUnavagamApplication {
  id                     Int      @id @default(autoincrement())
  tamilNaduId           Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  applicantName         String
  familyIncome          Float
  aadhaar               String
  bankAccountDetails     String

  tamilNadu             TamilNadu @relation(fields: [tamilNaduId], references: [id])
}

model NaanMudhalvanApplication {
  id                     Int      @id @default(autoincrement())
  tamilNaduId           Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  applicantName         String
  educationalQualification String
  skillSet              String
  bankAccountDetails     String

  tamilNadu             TamilNadu @relation(fields: [tamilNaduId], references: [id])
}

model BreakfastSchemeApplication {
  id                     Int      @id @default(autoincrement())
  tamilNaduId           Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  schoolName            String
  numberOfStudents      Int
  bankAccountDetails     String

  tamilNadu             TamilNadu @relation(fields: [tamilNaduId], references: [id])
}

model MGNREGAApplication {
  id                     Int      @id @default(autoincrement())
  tamilNaduId           Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  applicantName         String
  jobCardNumber         String
  workDetails           String
  bankAccountDetails     String

  tamilNadu             TamilNadu @relation(fields: [tamilNaduId], references: [id])
}
//telangana
model Telangana {
