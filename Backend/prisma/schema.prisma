generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int      @id @default(autoincrement())
  name               String
  loginId            String   @unique
  password           String   
  faceRecognitionCode String
  aadhaarNo         String   @unique
  panNo             String   @unique
  phoneNo           String   @unique
  schemes           Scheme[] @relation("User Schemes")
  documents         Document[]
}

model Scheme {
  id     Int    @id @default(autoincrement())
  name   String
  users  User[] @relation("User Schemes")
}

model Document {
  id       Int    @id @default(autoincrement())
  name     String
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}